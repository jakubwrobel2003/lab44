<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="txtWysokosc" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="150" />
        <TextBox Name="txtPromien" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" Width="150" />
        <Button Name="btnCreateStozek" Content="Utwórz Stożek" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0" Width="150" Click="btnCreateStozek_Click" />
        <Label Name="lblError" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" Width="300" Foreground="Red" Background="#FFE06F6F"/>
        <TextBox Name="txtNumerAlbumu" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="129,199,0,0" Width="200" Background="#FFBB2929" />
        <Button Name="btnSzukaj" Content="Szukaj" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,259,0,0" Width="75" Click="btnSzukaj_Click"/>
        <Label Name="lblWynik" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="64,239,0,0" Width="300" Height="40" Background="#FFE26B6B"/>
        <Button Content="Testuj ZnajdzWiekszy" Click="TestZnajdzWiekszy_Click" Width="200" Height="40" Margin="319,334,281,60"/>

        <!-- Etykiety wyświetlające zawartość półek -->
        <TextBlock Name="txtPółka1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" FontSize="16"/>
        <TextBlock Name="txtPółka2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0" FontSize="16"/>
        <TextBlock Name="txtPółka3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0" FontSize="16"/>

        <!-- Pola tekstowe do wprowadzania danych -->
        <TextBox Name="inputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="535,20,0,0" Width="200" Height="30"/>

        <!-- Przycisk do wstawiania wartości na pierwszą wolną półkę -->
        <Button Content="Wstaw Na Wolną Półkę" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="535,81,0,0" Width="200" Height="30" Click="OnWstawNaWolnąPółkęClick"/>

        <!-- Przycisk do wstawiania wartości bezpośrednio na półkę1 -->
        <Button Content="Wstaw Na Półkę 1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="535,135,0,0" Width="200" Height="30" Click="OnWstawNaPółkę1Click"/>

        <!-- Przycisk do wstawiania wartości bezpośrednio na półkę2 -->
        <Button Content="Wstaw Na Półkę 2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="522,180,0,0" Width="200" Height="30" Click="OnWstawNaPółkę2Click"/>

        <!-- Przycisk do wstawiania wartości bezpośrednio na półkę3 -->
        <Button Content="Wstaw Na Półkę 3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,180,0,0" Width="200" Height="30" Click="OnWstawNaPółkę3Click"/>

    </Grid>
</Window>
